<Label>
    font_size:20
<TextInput>
    font_size:20


<MyLayout>
    id:main_layout_id
    brand_spinner:brand_spinner
    model_input:model_input
    year_from_input:year_from_input
    year_to_input:year_to_input
    mileage_from_spinner:mileage_from_spinner
    mileage_to_spinner:mileage_to_spinner
    transmission_spinner:transmission_spinner
    engine_vol_input:engine_vol_input
    fuel_spinner:fuel_spinner
    driven_wheels_spinner:driven_wheels_spinner
    price_from_input:price_from_input
    price_to_input:price_to_input

    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        padding:20
        spacing:10


        GridLayout:
            cols:10
            rows:3
            spacing:5
            size_hint_y:0.2
            font_size:8

            Label:
                id:brand_input_label
                text:"Brand"
            Spinner:
                id:brand_spinner
                text:""
                values:["Audi", "BMW", "Nissan", "Toyota"]
                on_text:root.brand_spinner_clicked(brand_spinner.text)


            Label:
                id:model_input_label
                text:"Model"
            TextInput:
                id:model_input
                multiline:False

            Label:
                id:year_from_input_label
                text:"Year from"
            TextInput:
                id:year_from_input
                multiline:False

            Label:
                id:year_to_input_label
                text:"Year to"
            TextInput:
                id:year_to_input
                multiline:False

            Label:
                id:mileage_from_input_label
                text:"Mileage from, km"
            Spinner:
                id:mileage_from_spinner
                text:""
                values:["0", "25000", "50000", "75000", "100000", "125000", "150000", "175000", "200000", "225000", "250000", "275000", "300000", "325000", "350000", "375000", "400000", "425000", "450000", "475000", "500000"]
                on_text:root.mileage_from_clicked(mileage_from_spinner.text)

            Label:
                id:mileage_to_input_label
                text:"Mileage to, km"
            Spinner:
                id:mileage_to_spinner
                text:""
                values:["0", "25000", "50000", "75000", "100000", "125000", "150000", "175000", "200000", "225000", "250000", "275000", "300000", "325000", "350000", "375000", "400000", "425000", "450000", "475000", "500000"]
                on_text:root.mileage_to_clicked(mileage_to_spinner.text)

            Label:
                id:transmission_input_label
                text:"Transmission"
            Spinner:
                id:transmission_spinner
                text:""
                values:["Manual", "Automatic"]
                on_text:root.transmission_clicked(transmission_spinner.text)

            Label:
                id:engine_vol_input_label
                text:"Eng. volume, L"
            TextInput:
                id:engine_vol_input
                multiline:False

            Label:
                id:fuel_input_label
                text:"Fuel type"
            Spinner:
                id:fuel_spinner
                text:""
                values:["Petrol", "Petrol/gas", "Petrol/electric", "Diesel", "Electric"]
                on_text:root.fuel_clicked(fuel_spinner.text)

            Label:
                id:driven_wheels_input_label
                text:"Driven wheels"
            Spinner:
                id:driven_wheels_spinner
                text:""
                values:["Front", "Back", "4X4"]
                on_text:root.driven_wheels_clicked(driven_wheels_spinner.text)

            Label:
                id:price_from_input_label
                text:"Price from, Eur"
            TextInput:
                id:price_from_input
                multiline:False

            Label:
                id:price_to_input_label
                text:"Price to, Eur"
            TextInput:
                id:price_to_input
                multiline:False






        RoundedButton:
            size_hint_y:0.05
            text:"Add"
            font_size:30
            on_press: root.press()
            #background_normal:''
            #background_color:(66/255.0, 164/255.0, 245/255.0,1)
            size_hint:(None, None)
            pos_hint:{'right':1, 'center_y':0.5}

        Label:
            text:"Your cars"
            font_size:32
            size_hint:(1, 0.1)
            pos_hint:{'center_x':0.5}
            pos_hint:{'center_y':0.5}



        GridLayout:
            size_hint_y:0.1
            rows:5
            cols:3
            pos_hint:{'left':1, 'center_y':0.5}
            id:selected_car

            background_normal:''
            background_color:(10/255.0, 164/255.0, 200/255.0,1)


        RoundedButton:
            size_hint_y:0.05
            text:"Update"
            font_size:30
            on_press: root.update()
            #background_normal:''
            #background_color:(66/255.0, 164/255.0, 245/255.0,1)
            size_hint:(None, None)
            pos_hint:{'right':1, 'center_y':0.5}

        BoxLayout:

            orientation:"vertical"
            background_color:(255/255.0, 0/255.0, 0/255.0,1)
            Label:
                font_size:32
                text:"New listings:"
            ScrollView:
                id:scroll_view
                #size_hint_y:1
                do_scroll_x: False
                do_scroll_y: True
                #min_height:100
                BoxLayout:
                    id:new_listings
                    orientation:"vertical"
                    size_hint_y: None






<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    canvas.before:
        Color:
            rgba:(66/255.0, 164/255.0, 245/255.0,1)
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[360]